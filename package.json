{
  "name": "theMonk",
  "version": "0.1.0",
  "author": "Enilia",
  "description": "Dps simulator for monk",
  "keywords": [
    "ff14",
    "ffxiv",
    "dps"
  ],
  "main": "index.js",
  "browser": {
    "vm": "./lib/browser/adapter/vm.js",
    "./lib/Rotation.js": "lib/browser/adapter/Rotation.js"
  },
  "bin": {
    "themonk": "bin/themonk.js"
  },
  "engines": {
    "node": ">= 0.4.x"
  },
  "scripts": {
    "install": "bower install && npm run browserify-all-debug",
    "start": "http-server ./browser -c-1",
    "test": "npm run test-unit",
    "posttest": "npm run test-coverage && npm run test-doc",
    "test-unit": "mocha",
    "test-coverage": "mocha -R html-cov -r blanket > coverage.html",
    "test-doc": "mocha -R doc > doc.html",
    "test-watch": "mocha -wb",
    "browserify-all": "npm run browserify-api && npm run browserify-reporter",
    "browserify-all-debug": "npm run browserify-api-debug && npm run browserify-reporter-debug",
    "browserify-api": "browserify -r ./index.js:themonk > browser/js/themonkAPI/themonk.js",
    "browserify-reporter": "browserify -r ./lib/Reporter.js:reporter -t brfs > browser/js/themonkAPI/reporter.js",
    "browserify-api-debug": "browserify -r ./index.js:themonk --debug | exorcist ./browser/js/themonkAPI/themonk.js.map > browser/js/themonkAPI/themonk.js",
    "browserify-reporter-debug": "browserify -r ./lib/Reporter.js:reporter --debug | exorcist ./browser/js/themonkAPI/reporter.js.map > browser/js/themonkAPI/reporter.js",
    "browserify-api-watch": "watchify -r ./index.js:themonk -o browser/js/themonkAPI/themonk.js --debug --verbose"
  },
  "config": {
    "blanket": {
      "pattern": "lib",
      "data-cover-never": "node_modules"
    }
  },
  "dependencies": {
    "commander": "2.0.0",
    "browserify": "^5.12.1"
  },
  "devDependencies": {
    "blanket": "^1.1.6",
    "brfs": "^1.2.0",
    "exorcist": "^0.1.6",
    "http-server": "^0.8.0",
    "mocha": "^1.21.4",
    "watchify": "^1.0.6"
  },
  "files": [
    "Models",
    "Rotations",
    "bin",
    "lib",
    "test",
    "index.js"
  ],
  "directories": {
    "test": "test"
  },
  "license": "BSD-3-Clause",
  "repository": {
    "type": "git",
    "url": "https://github.com/Enilia/theMonk.git"
  },
  "bugs": {
    "url": "https://github.com/Enilia/theMonk/issues"
  },
  "homepage": "https://github.com/Enilia/theMonk",
  "private": true
}
